@model UpdateBottomGridDto
@{
    ViewData["Title"] = "UpdateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Yeni Öne Çıkan Alan Ekleme Sayfası</h6>
				<form method="post">
					<input type="hidden" asp-for="bottomGridID"/>
					<label>Başlık</label>
					<input type="text" asp-for="title" class="form-control" />
					<br />
					<label>Ikon</label>
					<input type="text" asp-for="icon" class="form-control" />
					<br />
					<label>İçerik</label>
					<input type="text" asp-for="description" class="form-control" />
					<br />
					<button class="btn btn-success">Veriyi Güncelle</button>
				</form>
			</div>
		</div>
	</div>
</div>

