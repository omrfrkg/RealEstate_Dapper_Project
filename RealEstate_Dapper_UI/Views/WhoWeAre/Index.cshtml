@model List<ResultWhoWeAreDetailDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Biz Kimiz Alanı Bilgi Listesi</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Başlık</th>
								<th scope="col">Alt Başlık</th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<th scope="row">@item.whoWeAreDetailID</th>
									<td>@item.title</td>
									<td>@item.subtitle</td>
									<td><a href="/WhoWeAre/DeleteWhoWeAreDetail/@item.whoWeAreDetailID" class="btn btn-outline-danger">Sil</a></td>
									<td><a href="/WhoWeAre/UpdateWhoWeAreDetail/@item.whoWeAreDetailID" class="btn btn-outline-success">Güncelle</a></td>
								</tr>
							}
						</tbody>
					</table>
					<a href="/WhoWeAre/CreateWhoWeAreDetail/" class="btn btn-outline-info">Yeni Biz Kimiz Alanı Girişi</a>
				</div>
			</div>
		</div>
	</div>
</div>


